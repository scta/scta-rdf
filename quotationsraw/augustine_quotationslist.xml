            <item xml:id="Augustine_Confessions_10_23_33_a">
               <quote type="Scholastic">beata quippe vita est gaudium de veritate</quote>
               <bibl type="Augustine_Confessions">
                  <author ref="#Augustine">Augustine</author>
                  <title ref="#Augustine_Confessions">Confessionum</title>
                  <biblScope type="librum">10</biblScope>
